{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "declaration": true,
    "types": ["@types/node"]
  },
  "include": ["src", "test", "vitest.config.ts", "tsdown.config.ts"]
}
